<% @page_title = "Tournament: #{@tournament.name}"%>


<h1> <%= @tournament.name %>
  <div class="registration-link">
    <% if @tournament.registration == 'on' %>
      <%= link_to 'Register',  '/users/sign_in', :class => 'btn', :id => 'Register' %>
    <% end %>
  </div>
</h1>

<table class="tournament-header">
  <tr><td>Date: </td><td><%= @tournament.event_date %></td></tr>
  <tr><td>Location: </td><td><%= @tournament.location %></td></tr>
</table>

<div class="hr"><hr/></div>
<p/>

<%= @description.html_safe %>


