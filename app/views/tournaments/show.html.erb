<% if flash[:notice] %>
    <div class="flash-notice"><%= flash[:notice] %></div>
<% end %>

<h1><%= @tournament.name %></h1>

<table class="tournament-header" border="1">
  <tr><td>Date: </td><td><%= @tournament.event_date %></td></tr>
  <tr><td>Location: </td><td><%= @tournament.location %></td></tr>
</table>

<div class="registration-link">
<% if @tournament.registration == 'on' %>
<%= link_to 'Register',  new_tournament_registration_path(@tournament.slug), :class => 'btn', :id => 'Register' %>
<% end %>
</div>

<p/>

<%= @description.html_safe %>


